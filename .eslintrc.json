{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint/eslint-plugin"
  ],
  "env": {
    "node": true,
    "es2020": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "import/extensions": 0,
    "import/no-dynamic-require": 0,
    "import/no-unresolved": 0,
    "no-unused-vars": 0,
    "no-underscore-dangle": 0
  }
}